<form action="/dose" method="POST">
  <div class="field">
    <label class="label">Enter Volume Usage</label> <input class="input" type="number" placeholder="Litres" name="amount">
  </div>
  <div class="field">
    <div class="control">
      <label class="radio"> <input type="radio" name="method" value="drum"> Drum </label> <label class="radio">
      <input type="radio" name="method" value="bottle"> Bottle </label>
    </div>
  </div>
  <div class="field">
    <div class="select">
      <select name="product">
        {{#each products }}
          <option> {{brandName}}, {{typeName}}</option>
        {{/each}}
      </select>
    </div>
  </div>
  <div class="field">
    <div class="control">
      <button class="button is-link is-light">Dose</button>
    </div>
  </div>
</form>
